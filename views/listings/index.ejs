<% layout("layouts/boilerplate.ejs") %>
<body>
    <style>
      #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }
      .filter{
        margin-right: 2rem;
        margin-top: 2rem;
        text-align: center;
        color: black;
        opacity: 0.7;
      }
      .filter:hover{
        opacity: 1;
        color: black;
        cursor: pointer;
      }
      .filter p{
        font-size: 0.8rem;
      }
      .filter-link{
        text-decoration: none;
        color: black;
      }
      .tax-info{
        display: none;
      }

      .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        padding: 1rem;
        height: 3.5rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
      }
    </style>

    
      <div id="filters">
        <div class="filter">
          <a href="/trending" class="filter-link">
            <i class="fa-solid fa-fire"></i>
            <p>Trending</p>
          </a>
        </div>
        <div class="filter">
          <a href="/rooms" class="filter-link">
            <i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
          </a>
        </div>
        <div class="filter">
          <a href="/cities" class="filter-link">
            <i class="fa-solid fa-mountain-city"></i>
            <p>Iconic Cities</p>
          </a>
        </div>
        <div class="filter">
          <a href="/mountains" class="filter-link">
            <i class="fa-solid fa-mountain"></i>
            <p>Mountains</p>
          </a>
        </div>
        <div class="filter">
          <a href="/castles" class="filter-link">
            <i class="fa-brands fa-fort-awesome"></i>
            <p>Castles</p>
          </a>
        </div>
        <div class="filter">
          <a href="/pools" class="filter-link">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Amazing Pools</p>
          </a>
        </div>
        <div class="filter">
          <a href="/camping" class="filter-link">
            <i class="fa-solid fa-campground"></i>
            <p>Camping</p>
          </a>
        </div>
        <div class="filter">
          <a href="/farms" class="filter-link">
            <i class="fa-solid fa-cow"></i>
            <p>Farms</p>
          </a>
        </div>
        <div class="filter">
          <a href="/arctic" class="filter-link">
            <i class="fa-solid fa-snowflake"></i>
            <p>Arctic</p>
          </a>
        </div>

        <div class="tax-toggle ms-auto">
          <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
          </div>
        </div>
        
      </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <%for(listing of allListings){%> 
                <a href="/listing/<%= listing._id %>" class="card-link" >
                  <div class="listing-card card col">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_images" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                      <div class="card-body">
                          <p class="card-text">
                            <b><%= listing.title %></b><br>
                            &#8377; <%=listing.price.toLocaleString("en-IN")%>/night
                            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
                          </p>
                        
                      </div>
                    
                  </div>
                </a>
            <% } %>
    </div>

    <script>
      let togglebtn=document.getElementById("flexSwitchCheckDefault")
      togglebtn.addEventListener("click",()=>{
        let taxInfo=document.getElementsByClassName("tax-info");
        for(info of taxInfo){
          if(info.style.display !="inline"){
            info.style.display="inline";
          }else{
            info.style.display="none";
          }
        }
      })
    </script>
</body>