<% layout("layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3 style="color: #fe424d;">Edit Listing</h3>
            <br>
            <form method="post" action="/listing/<%= individualList._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%= individualList.title %>" class="form-control" required>
                    <div class="valid-feedback">
                        Title looks attractive
                      </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%= individualList.title %></textarea>
                    <div class="valid-feedback">
                        Description added
                      </div>
                </div>
                <div class="mb-3">
                    Original Image <br>
                    <img src="<%= originalImageLink %>" alt="original image">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label for="description" class="form-label">Upload New Image</label>
                        <input type="file" name="listing[image]" class="form-control">
                    </div>
                    <div class="mb-3 col-md-4">
                        <label for="category" class="form-label">Select the category</label>
                        <select class="form-select" name="listing[category]" required>
                            <option value="trending" selected>Trending</option>
                            <option value="rooms">Rooms</option>
                            <option value="cities">Iconic Cities</option>
                            <option value="mountain">Mountains</option>
                            <option value="castles">Castles</option>
                            <option value="pools">Amazing Pools</option>
                            <option value="camping">Camping</option>
                            <option value="farms">Farms</option>
                            <option value="arctic">Arctic</option>
                          </select>
                    </div>
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" value="<%= individualList.price %>" class="form-control" required>
                        <div class="invalid-feedback">
                            Price is required
                          </div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" value="<%= individualList.location %>" class="form-control" required>
                        <div class="invalid-feedback">
                            Location required
                          </div>
                    </div>
                </div>
                
                
                <div class="mb-3">
                    <label for="location" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value="<%= individualList.country %>" class="form-control">
                    <div class="invalid-feedback">
                        Country required
                     </div>
                </div>
     
                <button class="btn btn-dark edit-btn">Edit</button>
            </form>
            <br>
        </div>
    </div>
   
</body>